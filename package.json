{
  "name": "xpots",
  "version": "0.2.2",
  "description": "基于ts开发的前端js工具库",
  "main": "lib/umd.min.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "start": "tsc -w",
    "build": "tsc && npm run build:umd && gulp build",
    "build:umd": "rollup -c",
    "doc": "gulp doc",
    "test": "jest --config jestconfig.json",
    "test:single": "sh build/test.sh",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "eslint src --fix --ext .ts,.tsx ",
    "version": "standard-version",
    "release": "sh build/release.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NOcooker/xpots.git"
  },
  "keywords": [
    "xpots",
    "ts",
    "utils"
  ],
  "author": "nocooker",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NOcooker/xpots/issues"
  },
  "homepage": "https://github.com/NOcooker/xpots#readme",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "browser-sync": "^2.26.13",
    "coveralls": "^3.1.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "gulp": "^4.0.2",
    "gulp-typedoc": "^2.2.5",
    "jest": "^26.6.3",
    "prettier": "^2.1.2",
    "rollup": "^2.33.2",
    "rollup-plugin-uglify": "^6.0.4",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.4.4",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.5",
    "uglify-es": "^3.3.9"
  }
}
